<%- include("partials/header") -%>

<h1 style="color: #5c7580;">Compose</h1>
<form method="post" action="/compose">

  <div class="form-group">
    <label>Author</label>
    <input type="text" name="Author" class="form-control" placeholder="Author Name" required autocomplete="off" spellcheck="false" value="<%= username %>" readonly>
  </div>

  <div class="form-group">
    <label>Title</label>
    <input type="text"  name="title" class="form-control" placeholder="Blog Title" required autocomplete="off" spellcheck="false">
  </div>

  <div class="form-group">
    <label>Blog</label>
    <textarea id="w3review" class="form-control" name="blog" rows="4" cols="50" placeholder="Type Blog Post..." required autocomplete="off" spellcheck="false"></textarea>
  </div>
   
  <button type="submit" class="btn btn-primary">Publish</button>
    
</form>

<%- include("partials/footer") -%>


